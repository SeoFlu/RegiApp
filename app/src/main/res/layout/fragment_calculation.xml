<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.CalculationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/cal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="합계 : "
        app:layout_constraintTop_toBottomOf="@+id/cal_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/cal_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text=" - "
        app:layout_constraintTop_toBottomOf="@+id/cal_recycler_view"
        app:layout_constraintLeft_toRightOf="@+id/cal_title"/>

    <Button
        android:id="@+id/cal_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계산"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/cal_recycler_view"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>