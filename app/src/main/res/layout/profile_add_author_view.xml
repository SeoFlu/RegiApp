<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99323232"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="60dp">
        
        <TextView
            android:id="@+id/author_add_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작가명 : "
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/author_close"
            app:layout_constraintLeft_toLeftOf="parent"/>
        
        <EditText
            android:id="@+id/author_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/author_close"
            app:layout_constraintLeft_toRightOf="@id/author_add_name_text"/>
    
        <Button
            android:id="@+id/author_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/author_add"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ADD"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>