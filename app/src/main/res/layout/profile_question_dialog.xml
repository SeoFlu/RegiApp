<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
        android:id="@+id/profile_dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/profile_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="비밀번호 : "
            android:textSize="40dp" />

        <EditText
            android:id="@+id/profile_dialog_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*******"
            android:textSize="40dp"
            android:layout_marginRight="50dp"
            android:inputType="numberPassword"
            android:layout_toEndOf="@+id/profile_dialog_title"/>
        
        <Button
            android:id="@+id/profile_dialog_pw_input"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:text="확인"
            android:textSize="40dp"
            android:layout_below="@id/profile_dialog_title"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>